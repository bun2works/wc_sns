<div class="col-lg-8 mx-auto">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-lg-11">
        <div class="card-title">
          <%= simple_format (@post.title) %>
        </div>
        <div class="card-body">
          <%= simple_format (@post.body) %>
        </div>
      </div>
    </div>
  </div>
  <p>
    <%= link_to "編集", edit_post_path(@post), class: "btn btn-block btn-primary col-lg-11 mx-auto" %>
  </p>
  <p>
    <%= button_tag "削除", class: "btn btn-block btn-warning col-lg-11 mx-auto", data: { toggle: "modal", target: "#delete-post" } %>
  </p>
</div>

<div class="modal fade" id="delete-post">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">投稿削除</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= "スレッドを削除しますか？" %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
        <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>