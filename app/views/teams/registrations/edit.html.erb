<div class="col-lg-6 mx-auto">
  <div class="col-lg-12 mb-3">
    <h4 class="text-center"><%= t ".title" %></h4>
  </div>

  <% if current_team.image.attached? %>
    <%= image_tag current_team.image.variant(resize_to_fill: [600, 400]).processed, class: "img-fluid" %>
  <% else %>
    <%= image_tag "no_image", class: "img-fluid" %>
  <% end %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mb-5" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :representative %>
      <%= f.text_field :representative, autocomplete: "representative", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :homepage %>
      <%= f.text_field :homepage, autocomplete: "homepage", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :location_and_day %>
      <%= f.text_field :location_and_day, autocomplete: "location_and_day", class: "form-control" %>
    </div>

    <div class="form-froup mb-3">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autocomplete: "introduction", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password %><i>(<%= t ".chenge_email" %>)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>

      <% if @minimum_password_length %>
        <em><%= t(".minimum_password_length", length: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      <i>(<%= t "current_pass_message" %>)</i>
    </div>

    <p class="actions">
      <%= f.submit t(".submit"), class: "btn btn-block btn-primary" %>
    </p>

    <p>
      <%= link_to t(".log_out"), destroy_team_session_path, method: :delete, class: "btn btn-block btn-secondary" %>
    </p>
  <% end %>

  <h3><%= t ".delete_account" %></h3>
  <p>
    <%= link_to t(".account_delete"), registration_path(resource_name), data: { confirm: "チーム(投稿含む)を削除してよろしいですか？" }, method: :delete, class: "btn btn-block btn-danger" %>
  </p>

  <p>
    <%= link_to t(".back"), :back, class: "btn btn-block btn-light" %>
  </p>
</div>
